#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "${SCRIPT_DIR}/../.." && pwd)"
BATS_BIN="${REPO_ROOT}/.tools/bin/bats"

if [[ ! -x "${BATS_BIN}" ]]; then
  echo "batsが未導入です。先に scripts/install-bats.sh を実行してください。" >&2
  exit 1
fi

exec "${BATS_BIN}" "$@"
